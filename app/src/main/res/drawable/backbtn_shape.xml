<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="0dp"
    android:layout_width="0dp">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/gray_btn_bg_color" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>

            <corners
                android:radius="20dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/white" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/white" />

            <corners
                android:radius="20dp"/>
        </shape>
    </item>
</selector>
