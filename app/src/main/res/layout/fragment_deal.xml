<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:xcustom="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:id="@+id/jktoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/activity_top"></include>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/jktoolbar">
            <TextView
                android:id="@+id/ListType"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:text="责任清单类别："
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/spinnerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/Spinner01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    <ListView
        android:id="@+id/lv_single"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/Type"
        android:layout_marginTop="10dp"
        android:background="@layout/rectangle"
        android:elevation="5dp"
        android:orientation="horizontal" />

        <TextView
            android:id="@+id/Responsibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv_single"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="责任类型："
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/ResponsibilityType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Responsibility"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/lv_single"
            android:textColor="@android:color/holo_green_dark"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ResponsibilityType"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/progress"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/submit_shape"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="提 交"
                android:textColor="#F7F8F7"
                android:textSize="15dp" />

        </RelativeLayout>


</RelativeLayout>