<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:xcustom="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:id="@+id/jktoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <Button
          android:id="@+id/cancel_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="取消"
          android:textSize="18dp"
          android:layout_weight="0.1"
          android:textColor="@drawable/button_submit"
          android:background="@null" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"/>
        <Button
            android:id="@+id/publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上报"
            android:textSize="18dp"
            android:layout_weight="0.1"
            android:background="@null"
            android:textColor="@drawable/button_submit"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/layoutContent"
        android:layout_below="@+id/jktoolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/buttontConten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttontContentTitle"
            android:elevation="5dp"
            android:orientation="vertical"
            android:background="@layout/rectangle">
            <GridLayout
                android:id="@+id/GridLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="6" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:textColor="@color/activity_task_text"
                    android:text="巡查人:"/>

                <TextView
                    android:id="@+id/peplename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"
                    android:text="XX"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:textColor="@color/activity_task_text"
                    android:text="巡查时间:"/>
                <TextView
                    android:id="@+id/nowtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:text="XX"/>
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:textColor="@color/activity_task_text"
                    android:text="标题:"/>
                <TextView
                    android:id="@+id/Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:text="标题"/>
                <TextView
                    android:id="@+id/textDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:textColor="@color/activity_task_text"
                    android:text="内容:"/>
                <TextView
                    android:id="@+id/Details"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:text="有人乱丢垃圾"/>
            </GridLayout>
            <RadioGroup
                android:id="@+id/rg_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Responsibility"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成"
                    android:checked="true"
                    android:textSize="16sp"
                    android:textColor="#c50f57"
                    />
                <RadioButton
                    android:id="@+id/rb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="处理中"
                    android:layout_below="@id/rb_1"
                    android:textSize="16sp"
                    android:textColor="#c50f57"
                    />
            </RadioGroup>
        </LinearLayout>
        <TextView
            android:id="@+id/explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttontConten"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="现场情况说明："/>
        <EditText
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/explain"
            android:textSize="14sp"
            android:gravity="left|top"
            android:background="@layout/rectangle"
            />

        <TextView
            android:id="@+id/now_scene"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="现场取证："
            android:textColor="@color/black"
            android:layout_below="@+id/result"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="18dp"/>

        <LinearLayout
            android:id="@+id/camera_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/now_scene"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone">
            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recyclerView1">
            </android.support.v7.widget.RecyclerView>


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
