<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/jktoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/activity_top"></include>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/jktoolbar"

        >
        <TextView
            android:id="@+id/buttontContentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="任务内容"
            android:textSize="15sp"
            />
        <LinearLayout
            android:id="@+id/buttontConten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttontContentTitle"
            android:elevation="5dp"
            android:orientation="horizontal"
            android:background="@layout/rectangle">
            <GridLayout
                android:id="@+id/GridLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="6" >
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:textColor="@color/activity_task_text"
                    android:text="标题:"/>
                <TextView
                    android:id="@+id/Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:text="标题"/>
                <TextView
                    android:id="@+id/textDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:textColor="@color/activity_task_text"
                    android:text="内容:"/>
                <TextView
                    android:id="@+id/Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:text="有人乱丢垃圾"/>

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:textColor="@color/activity_task_text"
                    android:layout_marginLeft="12dp"
                    android:text="发现时间:"/>
                <TextView
                    android:id="@+id/Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:text="2019年8月26日16：00：00"/>
                <TextView
                    android:id="@+id/LTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:textColor="@color/activity_task_text"
                    android:text="办结时限:"/>
                <TextView
                    android:id="@+id/lastTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:text="2019年8月26日16：00：00"/>
                <TextView
                    android:id="@+id/txtPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:textColor="@color/activity_task_text"
                    android:text="巡查地址:"/>
                <TextView
                    android:id="@+id/Place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:text="魏家庄111号"/>

   </GridLayout>
        </LinearLayout>

        <com.bm.library.PhotoView
            android:id="@+id/img_read"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/buttontConten"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:scaleType="center" />

        <LinearLayout
            android:id="@+id/Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_below="@+id/img_read">
            <TextView
                android:id="@+id/ListType"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/buttontConten"
                android:layout_marginLeft="10dp"
                android:text="责任清单类别："
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/spinnerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/Spinner01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_height="2px"
            android:background="@color/activity_task_background"
            android:layout_below="@+id/Type"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent">

        </View>

            <ListView
                android:id="@+id/lv_single"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/Type"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:background="@layout/rectangle"
                />

        <TextView
            android:id="@+id/Responsibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv_single"
            android:layout_marginLeft="10dp"
            android:text="责任类型："
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/ResponsibilityType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Responsibility"
            android:layout_below="@+id/lv_single"
            android:textColor="@android:color/holo_green_dark"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ResponsibilityType"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="58dp"
            android:layout_marginRight="58dp"
            android:layout_marginTop="17dp"
            android:gravity="center">

            <Button
                android:id="@+id/progress"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/submit_shape"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="提 交"
                android:textColor="#F7F8F7"
                android:textSize="15dp" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>