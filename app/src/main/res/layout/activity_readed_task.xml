<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/jktoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/activity_top"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/jktoolbar"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/buttontConten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@layout/rectangle"
            android:elevation="5dp"
            android:orientation="horizontal">

            <GridLayout
                android:id="@+id/GridLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="5">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:singleLine="true"
                    android:text="标题:"
                    android:textColor="@color/activity_task_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:text="这是标题"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:singleLine="true"
                    android:text="内容:"
                    android:textColor="@color/activity_task_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:text="有人乱丢垃圾"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:singleLine="true"
                    android:text="时间:"
                    android:textColor="@color/activity_task_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:text="2019年8月26日16：00：00"
                    android:textSize="15sp" />


            </GridLayout>
        </LinearLayout>

        <com.bm.library.PhotoView
            android:id="@+id/img_read"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/buttontConten"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:scaleType="center" />

    </RelativeLayout>
    <com.bm.library.PhotoView
        android:id="@+id/img2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/jktoolbar"
        android:scaleType="centerCrop"
        android:visibility="visible" />
</RelativeLayout>

